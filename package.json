{
  "name": "d-base-hp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "format": "prettier \"./src/**/*.{ts,tsx,css,json,md}\" --write --cache",
    "lint:css": "stylelint '**/*.{css,scss}'",
    "lint:css:fix": "pnpm run lint:css --fix",
    "lint:css:fix-order": "pnpm run lint:css --fix -c '.stylelintrc.order.js'",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "commit": "pnpm lint-staged && git-cz",
    "test": "jest",
    "check-all": "pnpm lint && pnpm lint:css && pnpm type-check"
  },
  "dependencies": {
    "next": "14.2.17",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "ress": "^5.0.2",
    "sass": "^1.80.6"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.2",
    "@storybook/addon-essentials": "^8.4.2",
    "@storybook/addon-interactions": "^8.4.2",
    "@storybook/addon-onboarding": "^8.4.2",
    "@storybook/addon-viewport": "^8.4.7",
    "@storybook/blocks": "^8.4.2",
    "@storybook/nextjs": "^8.4.2",
    "@storybook/react": "^8.4.2",
    "@storybook/test": "^8.4.2",
    "@svgr/webpack": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/parser": "^8.13.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.0.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-storybook": "^0.11.0",
    "eslint-plugin-unicorn": "^56.0.0",
    "git-cz": "^4.9.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "storybook": "^8.4.2",
    "stylelint": "^16.10.0",
    "stylelint-config-recess-order": "^5.1.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-scss": "^6.8.1",
    "typescript": "^5"
  },
  "lint-staged": {
    "**/*.{ts,tsx,css,scss,json,md}": "pnpm format",
    "*.{css,scss}": [
      "pnpm lint:css:fix-order",
      "pnpm lint:css"
    ],
    "*.{ts,tsx}": [
      "pnpm lint",
      "bash -c tsc --noEmit"
    ]
  },
  "engines": {
    "node": "20.x",
    "pnpm": "9.x"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
}
